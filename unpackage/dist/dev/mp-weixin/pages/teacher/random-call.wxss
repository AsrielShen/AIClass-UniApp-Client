#random-call {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #F6F6F6;
}
#random-call .random-block {
  padding: 0 30rpx;
  border-bottom: 1rpx solid #cbcbcb;
  background-color: #fff;
}
#random-call .random-block .random-action {
  margin: 20rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
#random-call .random-block .random-action .action-name {
  display: flex;
  align-items: center;
}
#random-call .random-block .random-action .action-name::before {
  content: 'â€¢';
  font-size: 40rpx;
  color: #F37B1D;
}
#random-call .random-block .random-action .action-button {
  margin: 0;
  font-size: 24rpx;
  border-radius: 25rpx;
  color: #fff;
  background-color: #39c5bb;
}
#random-call .pop-up {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}
#random-call .pop-up .pop-block {
  width: 80%;
  box-sizing: border-box;
  padding: 30rpx;
  border-radius: 10rpx;
  background: white;
  font-size: 28rpx;
  text-align: center;
}
#random-call .pop-up .pop-block .pop-content {
  margin: 30rpx 0;
  padding: 30rpx;
  background-color: #F6F6F6;
}
#random-call .pop-up .pop-block .pop-action {
  display: flex;
  justify-content: center;
}
#random-call .pop-up .pop-block .pop-action .button {
  font-size: 28rpx;
  width: 200rpx;
  margin: 0 50rpx;
  border-radius: 25rpx;
  color: red;
  border: 1rpx solid red;
  background-color: #fff;
}
#random-call .pop-up .pop-block .pop-action .button:first-child {
  color: #fff;
  background-color: #39c5bb;
  border: none;
}
